generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Class {
  id           Int            @id @default(autoincrement())
  description  String
  hour         String
  vacancies    Int
  initial      String
  Students     User[]
  Registration Registration[]
  createdAt    DateTime       @default(now())
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String
  role         String
  class        Class          @relation(fields: [classId], references: [id])
  classId      Int
  Registration Registration[]
  createdAt    DateTime       @default(now())
}

model Registration {
  id        Int      @id @default(autoincrement())
  student   User     @relation(fields: [userId], references: [id])
  class     Class    @relation(fields: [classId], references: [id])
  classId   Int
  userId    Int
  status    String
  createdAt DateTime @default(now())
}
